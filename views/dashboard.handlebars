{{#if posts.length}}
{{#each posts as |post| }}

<div class="container post">
    <div class="navbar nav-post">
        <a href="/dashboard/view/{{post.id}}"><h2 class="nav-text">{{post.title}}</h2></a>
        <h6 class="nav-text">Posted by {{post.User.fullname}} on {{post.postDate}}</h6>
    </div>
    <div class="nav-content"><h2>{{post.content}}</h2></div>
</div>
<script src="../js/createpost.js"></script>
{{/each}}
{{/if}}
<br>
<div class="text-center"><button type="button" id="new-post" class="btn btn-outline-secondary">+ New Post</button> </div>