  {{#if posts.length}}
    {{#each posts as |post| }}
    <div class="container post">
        <div class="navbar nav-post">

            {{#if ../loggedIn}}
                <a href="/post/{{post.id}}"><h2 class="nav-text">{{post.title}}</h2></a>
            {{else}}
                <h2 class="nav-text">{{post.title}}</h2>
            {{/if}}
            
            <h6 class="nav-text">Posted by {{post.User.fullname}} on {{post.postDate}}</h6>
        </div>
        <div class="nav-content"><h2>{{post.content}}</h2></div>
    </div>
    {{/each}}
  {{else}}
  <h2>No posts to display.</h2>
  {{/if}}
